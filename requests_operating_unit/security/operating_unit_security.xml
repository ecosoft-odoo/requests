<odoo noupdate="1">

    <record id="ir_rule_request_operating_units" model="ir.rule">
        <field name="model_id" ref="requests.model_request_request" />
        <field name="domain_force">
            ['|','|',('operating_unit_id','=',False),
            ('operating_unit_id','=',user.default_operating_unit_id.id),
            ('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]
        </field>
        <field name="name">Requests form allowed operating units</field>
        <field name="global" eval="True" />
        <field eval="1" name="perm_unlink" />
        <field eval="1" name="perm_write" />
        <field eval="1" name="perm_read" />
        <field eval="1" name="perm_create" />
    </record>


</odoo>
