<odoo>

<!--Request-->

    <record id="request_request_action_operating" model="ir.actions.act_window">
        <field name="name">Operating Unit Requests</field>
        <field name="res_model">request.request</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[(1, '=', 1)]</field>
    </record>

    <record id="request_request_view_form" model="ir.ui.view">
        <field name="name">request.request.view.form</field>
        <field name="model">request.request</field>
        <field name="inherit_id" ref="requests.request_request_view_form" />
        <field name="arch" type="xml">
            <field name="request_owner_id" position="after">
                <field name="operating_unit_id" widget="many2one" />
            </field>
        </field>
    </record>

    <record id="request_request_view_tree" model="ir.ui.view">
        <field name="name">request.request.view.tree</field>
        <field name="model">request.request</field>
        <field name="inherit_id" ref="requests.request_request_view_tree" />
        <field name="arch" type="xml">
            <field name="request_owner_id" position="after">
                <field name="operating_unit_id" />
            </field>
        </field>
    </record>

    <record id="request_request_view_kanban" model="ir.ui.view">
        <field name="name">request.request.view.kanban</field>
        <field name="model">request.request</field>
        <field name="inherit_id" ref="requests.request_request_view_kanban" />
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="operating_unit_id" readonly="1" />
            </field>
        </field>
    </record>

    <menuitem
        id="requests_request_menu_operating"
        parent="requests.requests_request_menu"
        name="Operating Unit Requests"
        action="request_request_action_operating"
        sequence="30"
    />

</odoo>
