<odoo>
    <record id="request_category_view_form" model="ir.ui.view">
        <field name="name">request.category.view.form</field>
        <field name="model">request.category</field>
        <field name="inherit_id" ref="request_flow.request_category_view_form" />
        <field name="arch" type="xml">
            <page name="options" position="after">
                <page string="Create EX Option" name="ex_option">
                    <group>
                        <field name="use_ex" />
                        <field name="ex_approved_action_id" />
                        <field name="ex_rejected_action_id" />
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
