<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="request_category_view_form" model="ir.ui.view">
        <field name="name">request.category.view.form</field>
        <field name="model">request.category</field>
        <field name="inherit_id" ref="requests.request_category_view_form" />
        <field name="arch" type="xml">
            <field name="has_quantity" position="after">
                <field
                    name="has_res_type"
                    string="Request Type"
                    widget="radio"
                    options="{'horizontal': true}"
                />
            </field>
        </field>
    </record>

</odoo>
