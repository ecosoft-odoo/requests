<odoo>
    <record id="request_category_view_form" model="ir.ui.view">
        <field name="name">request.category.view.form</field>
        <field name="model">request.category</field>
        <field name="inherit_id" ref="base_requests.request_category_view_form" />
        <field name="arch" type="xml">
            <page name="options" position="after">
                <page string="Purchase Request Options" name="purchase_request_options">
                    <group>
                        <field name="use_purchase_request" />
                        <field name="purchase_request_action_id" />
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
