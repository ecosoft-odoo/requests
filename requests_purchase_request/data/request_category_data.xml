<odoo noupdate="1">
    <record id="request_category_data_purchase_request" model="request.category">
        <field name="name">Purchase Request</field>
        <field
            name="image"
            type="base64"
            file="requests_purchase_request/static/src/img/purchase_request.png"
        />
        <field
            name="approved_action_id"
            ref="action_request_purchase_request_approved_actions"
        />
        <field
            name="refused_action_id"
            ref="action_request_purchase_request_refused_actions"
        />
        <field name="sequence">100</field>
        <field name="use_pr" eval="True" />
        <field name="automated_sequence" eval="True" />
        <field name="sequence_code">RQPR</field>
        <field name="has_date">optional</field>
        <field name="has_product">optional</field>
        <field name="has_quantity">optional</field>
    </record>
</odoo>
