        <field
            name="image"
            type="base64"
            file="requests_purchase_request/static/src/img/purchase_request.png"
        />
        <field name="sequence">100</field>
        <field name="use_purchase_request" eval="True" />
        <field
            name="purchase_request_action_id"
            ref="requests_purchase_request.server_action_create_purchase_request"
        />
        <field name="automated_sequence" eval="True" />
        <field name="sequence_code">RQPR</field>
    </record>
</odoo>
