<odoo>
    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">view.purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/group/group" position="inside">
                <field name="requests_id" invisible="1" />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_open_requests"
                    string="Requests Helper"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-paper-plane"
                    attrs="{'invisible': [('requests_id', '=', False)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
