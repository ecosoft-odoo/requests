<odoo>
    <record id="request_request_view_form" model="ir.ui.view">
        <field name="name">request.request.view.form</field>
        <field name="model">request.request</field>
        <field name="inherit_id" ref="base_requests.request_request_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <field name="use_expense" invisible="1" />
                <button
                    name="action_create_expense"
                    string="Create Expense"
                    type="object"
                    attrs="{'invisible':['|','|',('use_expense','=',False),('state','!=','new'),('hr_expense_count','=',0)]}"
                />
                <button
                    name="action_create_expense"
                    string="Create Expense"
                    type="object"
                    class="btn-primary"
                    attrs="{'invisible':['|','|',('use_expense','=',False),('state','!=','new'),('hr_expense_count','>',0)]}"
                />
            </xpath>
            <xpath expr="//button[@name='action_get_attachment_view']" position="after">
                <button
                    name="action_view_expense"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-usd"
                    attrs="{'invisible':[('use_expense','=',False)]}"
                >
                    <field name="hr_expense_count" string="EX" widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
