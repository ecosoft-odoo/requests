<odoo noupdate="1">
    <record id="request_category_data_spending" model="request.category">
        <field name="name">Spendings</field>
        <field
            name="image"
            type="base64"
            file="requests_spending/static/src/img/spending.png"
        />
        <field
            name="approved_action_id"
            ref="action_request_spending_approved_actions"
        />
        <field name="sequence">100</field>
        <field name="use_pr" eval="True" />
        <field name="use_av" eval="True" />
        <field name="use_ex" eval="True" />
        <field name="automated_sequence" eval="True" />
        <field name="sequence_code">RQSP</field>
    </record>
</odoo>
