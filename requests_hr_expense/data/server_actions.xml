<odoo>
    <!-- Server actions for Employee Expense -->
    <record id="action_request_expense_approved_actions" model="ir.actions.server">
        <field name="name">Request Type - Expense: Approve Expenses</field>
        <field name="model_id" ref="requests.model_request_request" />
        <field name="state">code</field>
        <field name="code">
expense_sheets = record.expense_sheet_ids.filtered(lambda l: l.state=="submit")
expense_sheets.with_context(bypass_check_user_has_groups=True).approve_expense_sheets()
        </field>
    </record>

    <record id="action_request_expense_refused_actions" model="ir.actions.server">
        <field name="name">Request Type - Expense: Refuse Expenses</field>
        <field name="model_id" ref="requests.model_request_request" />
        <field name="state">code</field>
        <field name="code">
expense_sheets = record.expense_sheet_ids.filtered(lambda l: l.state=="submit")
expense_sheets.mapped("expense_line_ids").refuse_expense("Refused by ref request")
expense_sheets.refuse_sheet("Refused by ref request")
        </field>
    </record>

</odoo>
