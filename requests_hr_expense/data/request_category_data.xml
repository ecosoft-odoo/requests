<odoo noupdate="1">
    <record id="request_category_data_hr_expense" model="request.category">
        <field name="name">Employee Expense</field>
        <field
            name="image"
            type="base64"
            file="requests_hr_expense/static/src/img/expense.svg"
        />
        <field name="sequence">100</field>
        <field name="use_expense" eval="True" />
        <field
            name="expense_action_id"
            ref="requests_hr_expense.server_action_create_hr_expense"
        />
        <field name="automated_sequence" eval="True" />
        <field name="sequence_code">RQEX</field>
    </record>
</odoo>
