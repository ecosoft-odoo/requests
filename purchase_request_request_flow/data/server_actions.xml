<odoo>

    <!-- Server actions for PR -->
    <record
        id="action_request_purchase_request_approved_actions"
        model="ir.actions.server"
    >
        <field name="name">Request Type - PR: Approve PR</field>
        <field name="model_id" ref="request_flow.model_request_request" />
        <field name="state">code</field>
        <field name="code">
record.purchase_request_ids.filtered(lambda l: l.state=="to_approve").button_approved()
        </field>
    </record>

    <record
        id="action_request_purchase_request_refused_actions"
        model="ir.actions.server"
    >
        <field name="name">Request Type - PR: Refuse PR</field>
        <field name="model_id" ref="request_flow.model_request_request" />
        <field name="state">code</field>
        <field name="code">
record.purchase_request_ids.write({"cancel_confirm": True})
record.purchase_request_ids.filtered(lambda l: l.state=="to_approve").button_rejected()
        </field>
    </record>

</odoo>
